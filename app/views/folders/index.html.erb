<% content_for :title, t(".folders") %>
<div class="flex flex-col flex-1 mx-16">
  <p style="color: green"><%= notice %></p>
  <div class="flex justify-between">
    <h1><%= t(".folders") %></h1>
    <%= link_to t(".new_folder"), new_folder_path, class: "btn-primary" %>
  </div>
  <div id="folders">
    <% @folders.each do |folder| %>
      <% next if folder.name == "No folder" %>
      <div class="my-2">
        <%= render folder %>
        <div class="flex mt-2">
          <%= link_to t(".edit_this_folder"), edit_folder_path(folder), class: "btn-primary" %>
          <div class="mx-2"></div>
          <%= button_to t(".destroy_this_folder"), folder, method: :delete, class: "btn-secondary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
