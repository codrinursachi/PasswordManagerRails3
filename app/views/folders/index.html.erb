<%= link_to "Back to logins", root_path %>
<h1>Folders</h1>

<div id="folders">
  <% @folders.each do |folder| %>
    <% next if folder.name=="No folder" %>
    <%= render folder %>
    <p>
      <%= link_to "Show this folder", folder %>
    </p>
  <% end %>
</div>

