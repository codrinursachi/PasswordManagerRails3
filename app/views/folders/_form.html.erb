<%= form_with(model: folder) do |form| %>
  <% if folder.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(folder.errors.count, "error") + " " + t(".prohibited") %>:</h2>
      <ul>
        <% folder.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div>
    <fieldset>
      <legend><%= form.label :name, style: "display: block" %></legend>
      <%= form.text_field :name %>
    </fieldset>
  </div>
  <div>
    <%= form.submit t(".save_folder"), class: "btn-primary mt-2" %>
  </div>
<% end %>
