<%= form_with url: logins_path, class: "flex gap-10 mt-8 items-center text-2xl flex-wrap", method: :get do |form| %>
  <div>
    <%= form.label :q, t(".search_for"), class: "text-2xl" %>
    <%= form.search_field :q, class: "hover:ring-1 hover:ring-blue-600 focus:ring-2 focus:ring-blue:600 w-full md:w-4/6" %>
  </div>
  <div>
    <%= form.label :favorite, t(".favorite")%>
    <%= form.check_box :favorite, include_hidden: false, class: "size-[21px]" %>
  </div>
  <%= form.submit t(".search"), class: "btn-primary text-lg" %>
<% end %>