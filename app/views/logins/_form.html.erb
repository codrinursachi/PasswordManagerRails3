<%= form_with(model: login) do |form| %>
  <% if login.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(login.errors.count, "error") %> prohibited this login from being saved:</h2>

      <ul>
        <% login.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :login_name, style: "display: block" %>
    <%= form.text_field :login_name %>
  </div>

  <div>
    <%= form.label :login_password, style: "display: block" %>
    <%= form.text_field :login_password %>
  </div>

  <div>
    <%= form.fields_for :urls do |urls_form| %>
      <%= urls_form.label :uri, style: "display: block" %>
      <%= urls_form.text_field :uri %>
    <% end %>
  </div>

  <div>
    <%= form.label :notes, style: "display: block" %>
    <%= form.textarea :notes %>
  </div>

  <div>
    <%= form.label :is_favorite, style: "display: block" %>
    <%= form.checkbox :is_favorite %>
  </div>

  <div>
    <%= form.label :folder_id, style: "display: block" %>
    <%= form.collection_select :folder_id, Folder.accessible_by(current_ability),:id,:name %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
